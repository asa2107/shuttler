<div class="page-header">
  <h1>
    Matches
    <a href="/matches/new" class="btn btn-lg btn-success">New Match</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Playing against</th>
        <th>Opponent Skill level</th>
        <th>Starting time</th>
        <th>Ending time</th>
        <th>Venue</th>
        <th>Actions</th>
      </tr>

      <% @matches.each do |match| %>
      <tr>
        <td><%= match.accepting_user.last_name %>, <%= match.creating_user.first_name %></td>
        <td><%= match.accepting_user.skill_level %></td>
        <td><%= match.listing.start_time.strftime('%B %e, %Y at %l:%M%P') %></td>
        <td><%= match.listing.end_time.strftime('%B %e, %Y at %l:%M%P') %></td>
        <td><%= match.listing.location %></td>
        <td>
          <a href="/matches/<%= match.id %>" class="btn btn-primary">Show</a>
          <a href="/matches/<%= match.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_match/<%= match.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
