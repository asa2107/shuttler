<!-- Validation failure messages -->
<% if @match.errors.any? %>
  <% @match.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Match #<%= @match.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_match/<%= @match.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for creator_id -->
      <div class="form-group">
        <label for="creator_id" class="control-label">
          Creator
        </label>

        <input type="text" id="creator_id" name="creator_id" placeholder="Creator" class="form-control" value="<%= @match.creator_id %>">
      </div>

      <!-- Label and input for acceptor_id -->
      <div class="form-group">
        <label for="acceptor_id" class="control-label">
          Acceptor
        </label>

        <input type="text" id="acceptor_id" name="acceptor_id" placeholder="Acceptor" class="form-control" value="<%= @match.acceptor_id %>">
      </div>

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @match.listing_id %>">
      </div>

      <button class="btn btn-warning">
        Update Match
      </button>
      or
      <a href="/matches/<%= @match.id %>">Cancel</a>
    </form>
  </div>
</div>
