<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User name</dt>
        <dd><%= @user.last_name %>, <%= @user.first_name %></dd>
        <dt>Email</dt>
        <dd><%= @user.email %></dd>
        <dt>Gender</dt>
        <dd><%= @user.gender %></dd>
        <dt>Skill Level</dt>
        <dd><%= @user.skill_level %></dd>
    </dl>
  </div>
</div>
