<div class="page-header">
  <h3>User #<%= current_user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User name</dt>
        <dd><%= current_user.username %></dd>
      <dt>Email</dt>
        <dd><%= current_user.email %></dd>
    </dl>
  </div>
</div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Caption</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>

        <% @likes.each do |like| %>
          <% if like.user_id == current_user.id %>
        <tr>
          <td><%= like.photo.caption %></td>
          <td><img src="<%= like.photo.image %>" width="400"></td>
          <td>
            <a href="/photos/<%= like.photo.id %>" class="btn btn-primary">Show</a>
            <a href="/photos/<%= like.photo.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_photo/<%= like.photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
            <% end %>
        <% end %>
      </table>
    </div>
  </div>
