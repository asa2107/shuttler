<div class="page-header">
  <h1>
    Messages
    <a href="/messages/new" class="btn btn-lg btn-success">New Message</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    
    <table class="table table-striped table-hover">
      <tr>
        <th>Sent to</th>
        <th>Sent at</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <% if message.sender_id == current_user.id %>
          <td><%= message.receiving_user.last_name %>, <%= message.receiving_user.first_name %></td>
          <td><%= time_ago_in_words(message.created_at) %> ago</td>
          <td><%= message.body %></td>
          <td>
            <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        <% end %>
        </tr>
      <% end %>
    </table>

    <table class="table table-striped table-hover">
      <tr>
        <th>Sent by</th>
        <th>Sent at</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <% if message.receiver_id == current_user.id %>
          <td><%= message.sending_user.last_name %>, <%= message.sending_user.first_name %></td>
          <td><%= time_ago_in_words(message.created_at) %> ago</td>
          <td><%= message.body %></td>
          <td>
            <a href="/messages/<%= message.id %>" class="btn btn-primary">Show</a>
            <a href="/delete_message/<%= message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        <% end %>
        </tr>
      <% end %>
    </table>


  </div>
</div>
