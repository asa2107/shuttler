<div class="page-header">
  <h3>Message #<%= @message.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Receiver</dt>
      <dd><%= @message.receiving_user.last_name %>, <%= @message.receiving_user.first_name %></dd>

      <dt>Sent at</dt>
      <dd><%= time_ago_in_words(@message.created_at) %> ago</dd>

      <dt>Body</dt>
      <dd><%= @message.body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/messages" class="btn btn-primary">
        Back
      </a>
      <a href="/messages/<%= @message.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_message/<%= @message.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
